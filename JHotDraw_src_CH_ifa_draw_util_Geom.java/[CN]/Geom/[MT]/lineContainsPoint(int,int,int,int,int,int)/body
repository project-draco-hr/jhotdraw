{
  Rectangle r=new Rectangle(new Point(x1,y1));
  r.add(x2,y2);
  r.grow(2,2);
  if (!r.contains(px,py))   return false;
  double a, b, x, y;
  if (x1 == x2)   return (Math.abs(px - x1) < 3);
  if (y1 == y2)   return (Math.abs(py - y1) < 3);
  a=(double)(y1 - y2) / (double)(x1 - x2);
  b=(double)y1 - a * (double)x1;
  x=(py - b) / a;
  y=a * px + b;
  return (Math.min(Math.abs(x - px),Math.abs(y - py)) < 4);
}
