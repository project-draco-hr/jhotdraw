{
  unsavedView.execute(new Worker(){
    protected Object construct() throws IOException {
      unsavedView.write(file);
      return null;
    }
    @Override protected void done(    Object value){
      unsavedView.setFile(file);
      getApplication().dispose(unsavedView);
      reviewNext();
    }
    @Override protected void failed(    Throwable error){
      JSheet.showMessageSheet(unsavedView.getComponent(),"<html>" + UIManager.getString("OptionPane.css") + "<b>Couldn't save to the file \""+ file+ "\".<p>"+ "Reason: "+ error,JOptionPane.ERROR_MESSAGE);
      unsavedView.setEnabled(true);
      if (oldFocusOwner != null) {
        oldFocusOwner.requestFocus();
      }
      getApplication().setEnabled(true);
    }
  }
);
}
