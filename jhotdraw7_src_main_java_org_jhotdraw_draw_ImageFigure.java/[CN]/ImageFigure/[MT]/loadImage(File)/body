{
  InputStream in=null;
  try {
    in=new FileInputStream(file);
    loadImage(in);
  }
 catch (  Throwable t) {
    ResourceBundleUtil labels=ResourceBundleUtil.getBundle("org.jhotdraw.draw.Labels");
    IOException e=new IOException(labels.getFormatted("file.failedToLoadImage.message",file.getName()));
    e.initCause(t);
    throw e;
  }
 finally {
    if (in != null) {
      in.close();
    }
  }
}
