{
  InputStream in=null;
  try {
    in=new FileInputStream(file);
    loadImage(in);
  }
 catch (  Throwable t) {
    ResourceBundleUtil labels=ResourceBundleUtil.getLAFBundle("org.jhotdraw.draw.Labels");
    IOException e=new IOException(labels.getFormatted("failedToLoadImage",file.getName()));
    e.initCause(t);
    throw e;
  }
 finally {
    if (in != null)     in.close();
  }
}
