{
  Application app;
  String os=System.getProperty("os.name").toLowerCase();
  if (os.startsWith("mac")) {
    app=new DefaultOSXApplication();
  }
 else   if (os.startsWith("win")) {
    app=new DefaultSDIApplication();
  }
 else {
    app=new DefaultSDIApplication();
  }
  DefaultApplicationModel model=new PertApplicationModel();
  model.setName("JHotDraw Pert");
  model.setVersion(Main.class.getPackage().getImplementationVersion());
  model.setCopyright("Copyright 2006-2009 (c) by the authors of JHotDraw\n" + "This software is licensed under LGPL or Creative Commons 3.0 BY");
  model.setViewClassName("org.jhotdraw.samples.pert.PertView");
  app.setModel(model);
  app.launch(args);
}
