{
  File file=v.getFile();
  String title;
  if (file == null) {
    title=labels.getString("unnamedFile");
  }
 else {
    title=file.getName();
  }
  if (v.hasUnsavedChanges()) {
    title+="*";
  }
  v.setTitle(labels.getFormatted("internalFrame.title",title,getName(),v.getMultipleOpenId()));
  f.setTitle(v.getTitle());
}
