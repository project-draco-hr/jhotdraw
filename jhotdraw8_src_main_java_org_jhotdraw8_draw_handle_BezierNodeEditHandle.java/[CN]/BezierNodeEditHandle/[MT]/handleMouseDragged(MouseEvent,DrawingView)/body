{
  Point2D newPoint=view.viewToWorld(new Point2D(event.getX(),event.getY()));
  if (!event.isAltDown() && !event.isControlDown()) {
    newPoint=view.getConstrainer().constrainPoint(getOwner(),newPoint);
  }
  ImmutableObservableList<BezierNode> list=owner.get(pointKey);
  if (pointIndex >= list.size())   return;
  BezierNode p=list.get(pointIndex);
  view.getModel().set(getOwner(),pointKey,ImmutableObservableList.set(list,pointIndex,p.setC0AndTranslateC1C2(getOwner().worldToLocal(newPoint))));
}
