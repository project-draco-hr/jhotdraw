{
  Figure c=null;
  if (fStartConnector == null)   c=findSource(x,y,drawing());
 else   c=findTarget(x,y,drawing());
  if (c != fTarget) {
    if (fTarget != null)     fTarget.connectorVisibility(false);
    fTarget=c;
    if (fTarget != null)     fTarget.connectorVisibility(true);
  }
  Connector cc=null;
  if (c != null)   cc=findConnector(e.getX(),e.getY(),c);
  if (cc != fConnectorTarget)   fConnectorTarget=cc;
  view().checkDamage();
}
