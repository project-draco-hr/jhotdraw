{
  SwingUtilities.invokeLater(new Runnable(){
    public void run(){
      JFrame f=new JFrame("JHotDraw Draw Applet");
      f.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
      DrawApplet a=new DrawApplet();
      f.getContentPane().add(a);
      a.init();
      f.setSize(500,400);
      f.setVisible(true);
      a.start();
    }
  }
);
}
