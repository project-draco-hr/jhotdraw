{
  LinkedList<URI> uris=new LinkedList<URI>();
  for (int i=0; i < args.length; ++i) {
    if (args[i].equals("-open")) {
      for (++i; i < args.length; ++i) {
        if (args[i].startsWith("-")) {
          break;
        }
        URI uri;
        uri=new File(args[i]).toURI();
        uris.add(uri);
      }
    }
  }
  return uris;
}
