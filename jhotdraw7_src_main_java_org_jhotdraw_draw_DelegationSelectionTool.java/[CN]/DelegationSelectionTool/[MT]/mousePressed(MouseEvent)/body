{
  if (popupTimer != null) {
    popupTimer.stop();
    popupTimer=null;
  }
  if (evt.isPopupTrigger()) {
    handlePopupMenu(evt);
  }
 else {
    super.mousePressed(evt);
    popupTimer=new javax.swing.Timer(1000,new ActionListener(){
      public void actionPerformed(      ActionEvent aevt){
        handlePopupMenu(evt);
        popupTimer=null;
      }
    }
);
    popupTimer.setRepeats(false);
    popupTimer.start();
  }
}
