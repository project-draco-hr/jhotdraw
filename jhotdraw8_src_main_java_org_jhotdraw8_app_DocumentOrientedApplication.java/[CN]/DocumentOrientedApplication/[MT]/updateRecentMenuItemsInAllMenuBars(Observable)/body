{
  if (isSystemMenuSupported) {
    if (systemMenus != null) {
      updateRecentMenuItemsMB(systemMenus);
    }
  }
 else {
    for (    DocumentView v : views()) {
      BorderPane bp=(BorderPane)v.getNode().getScene().getRoot();
      MenuBar mb=(MenuBar)bp.getTop();
      if (mb != null) {
        updateRecentMenuItemsMB((mb.getMenus()));
      }
    }
  }
}
