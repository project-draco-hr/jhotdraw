{
  if (value == null) {
    p.setFile(file);
    p.markChangesAsSaved();
    doIt(p);
  }
 else {
    String message;
    if ((value instanceof Throwable) && ((Throwable)value).getMessage() != null) {
      message=((Throwable)value).getMessage();
    }
 else {
      message=value.toString();
    }
    ResourceBundleUtil labels=ResourceBundleUtil.getLAFBundle("org.jhotdraw.app.Labels");
    JSheet.showMessageSheet(getActiveProject().getComponent(),"<html>" + UIManager.getString("OptionPane.css") + "<b>"+ labels.getFormatted("couldntSave",file.getName())+ "</b><br>"+ ((message == null) ? "" : message),JOptionPane.ERROR_MESSAGE);
  }
  p.setEnabled(true);
  if (oldFocusOwner != null) {
    oldFocusOwner.requestFocus();
  }
}
