{
  Component focusOwner=KeyboardFocusManager.getCurrentKeyboardFocusManager().getPermanentFocusOwner();
  if (focusOwner != null && focusOwner instanceof JComponent) {
    JComponent component=(JComponent)focusOwner;
    component.getTransferHandler().exportToClipboard(component,component.getToolkit().getSystemClipboard(),TransferHandler.COPY);
  }
}
