{
  String path=null;
  FileDialog dialog=new FileDialog(this,title,FileDialog.SAVE);
  dialog.show();
  String filename=dialog.getFile();
  if (filename != null) {
    filename=stripTrailingAsterisks(filename);
    String dirname=dialog.getDirectory();
    path=dirname + filename;
  }
  dialog.dispose();
  return path;
}
