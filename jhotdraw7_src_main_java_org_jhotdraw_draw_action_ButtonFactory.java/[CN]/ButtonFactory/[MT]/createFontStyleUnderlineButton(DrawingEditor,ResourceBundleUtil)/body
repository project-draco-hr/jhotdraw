{
  JButton btn;
  btn=new JButton();
  labels.configureToolBarButton(btn,"attributeFontUnderline");
  btn.setFocusable(false);
  AbstractAction a=new AttributeToggler(editor,FONT_UNDERLINE,Boolean.TRUE,Boolean.FALSE,new StyledEditorKit.BoldAction());
  a.putValue(Actions.UNDO_PRESENTATION_NAME_KEY,labels.getString("attributeFontUnderline"));
  btn.addActionListener(a);
  return btn;
}
