{
  JButton btn;
  btn=new JButton();
  labels.configureToolBarButton(btn,"attributeFontItalic");
  btn.setFocusable(false);
  AbstractAction a=new AttributeToggler(editor,FONT_ITALIC,Boolean.TRUE,Boolean.FALSE,new StyledEditorKit.BoldAction());
  a.putValue(Actions.UNDO_PRESENTATION_NAME_KEY,labels.getString("attributeFontItalic"));
  btn.addActionListener(a);
  return btn;
}
