{
  LinkedList<Handle> handles=new LinkedList<Handle>();
switch (detailLevel) {
case 0:
    BoxHandleKit.addBoxHandles(this,handles);
  handles.add(new BezierScaleHandle(this));
break;
case 1:
for (int i=0, n=path.size(); i < n; i++) {
handles.add(new BezierNodeHandle(this,i));
}
break;
}
return handles;
}
