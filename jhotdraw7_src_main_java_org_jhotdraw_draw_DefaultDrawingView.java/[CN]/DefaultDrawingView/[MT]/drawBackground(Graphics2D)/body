{
  int x=(int)(-translate.x * scaleFactor);
  int y=(int)(-translate.y * scaleFactor);
  int w=getWidth();
  int h=getHeight();
  g.setColor(getBackground());
  g.fillRect(x,y,w - x,h - y);
  if (y > 0) {
    g.setColor(new Color(0xf0f0f0));
    g.fillRect(0,0,w,y);
  }
  if (x > 0) {
    g.setColor(new Color(0xf0f0f0));
    g.fillRect(0,0,x,h);
  }
}
