{
  String className=getClass().getName();
  className=className.substring(className.lastIndexOf('.') + 1);
  StringBuilder buf=new StringBuilder();
  buf.append(className).append('@').append(Integer.toHexString(hashCode())).append("{properties=").append(getProperties()).append(", connections={");
  boolean isFirst=true;
  for (  Figure f : connectedFigures) {
    if (isFirst) {
      isFirst=false;
    }
 else {
      buf.append(',');
    }
    className=f.getClass().getName();
    className=className.substring(className.lastIndexOf('.') + 1);
    buf.append(className).append('@').append(f.hashCode());
  }
  buf.append("}}");
  return buf.toString();
}
