{
  super(w,h,null,0,w);
  pixels=new int[w * h];
  this.w=w;
  this.h=h;
  this.trackBuffer=(trackBuffer % 2 == 1) ? trackBuffer - 1 : trackBuffer;
  this.componentIndex=componentIndex;
  this.isHorizontal=isHorizontal;
  newPixels(pixels,new DirectColorModel(24,0x00ff0000,0x0000ff00,0x000000ff),0,w);
  setAnimated(true);
}
