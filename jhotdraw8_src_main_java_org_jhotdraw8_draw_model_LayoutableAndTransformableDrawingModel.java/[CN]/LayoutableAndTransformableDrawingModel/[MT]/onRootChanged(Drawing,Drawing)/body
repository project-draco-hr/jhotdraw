{
  if (listenOnDrawing) {
    if (oldValue != null) {
      newValue.getPropertyChangeListeners().add(propertyChangeHandler);
    }
    if (newValue != null) {
      newValue.getPropertyChangeListeners().add(propertyChangeHandler);
    }
  }
  fireTreeModelEvent(TreeModelEvent.rootChanged(this,newValue));
}
