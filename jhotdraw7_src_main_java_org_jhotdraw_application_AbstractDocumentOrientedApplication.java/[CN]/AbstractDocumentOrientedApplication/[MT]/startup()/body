{
  final DocumentView v=createView();
  add(v);
  v.setEnabled(false);
  v.execute(new Worker(){
    public Object construct(){
      try {
        v.clear();
        return null;
      }
 catch (      IOException e) {
        return e;
      }
    }
    public void finished(    Object result){
      v.setEnabled(true);
    }
  }
);
  show(v);
}
