{
  if (find == null) {
    return replace == null ? str : replace;
  }
  if (pattern == null) {
    pattern=Pattern.compile(find);
  }
  Matcher m=pattern.matcher(str);
  try {
    return replace == null ? m.replaceAll("$0") : m.replaceAll(replace);
  }
 catch (  IndexOutOfBoundsException e) {
    e.printStackTrace();
    return str;
  }
}
