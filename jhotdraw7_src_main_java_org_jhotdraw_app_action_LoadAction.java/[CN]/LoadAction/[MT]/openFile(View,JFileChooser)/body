{
  final File file=fileChooser.getSelectedFile();
  view.setEnabled(false);
  view.execute(new Worker(){
    public Object construct(){
      try {
        view.read(file);
        return null;
      }
 catch (      IOException e) {
        return e;
      }
    }
    public void finished(    Object value){
      fileOpened(view,file,value);
    }
  }
);
}
