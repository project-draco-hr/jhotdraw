{
  if (value == null) {
    documentView.setFile(file);
    documentView.setEnabled(true);
    getApplication().addRecentFile(file);
  }
 else {
    JSheet.showMessageSheet(documentView.getComponent(),"<html>" + UIManager.getString("OptionPane.css") + "<b>Couldn't open the file \""+ file+ "\".</b><br>"+ value,JOptionPane.ERROR_MESSAGE,new SheetListener(){
      public void optionSelected(      SheetEvent evt){
        documentView.execute(new Worker(){
          public Object construct(){
            try {
              documentView.clear();
              return null;
            }
 catch (            IOException ex) {
              return ex;
            }
          }
          public void finished(          Object result){
            documentView.setEnabled(true);
          }
        }
);
      }
    }
);
  }
}
