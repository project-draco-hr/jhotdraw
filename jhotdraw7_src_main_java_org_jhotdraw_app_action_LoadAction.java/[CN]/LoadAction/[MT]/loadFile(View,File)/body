{
  view.setEnabled(false);
  view.execute(new Worker(){
    protected Object construct() throws IOException {
      view.read(file);
      return null;
    }
    @Override protected void done(    Object value){
      view.setFile(file);
      view.setEnabled(true);
      getApplication().addRecentFile(file);
    }
    @Override protected void failed(    Throwable value){
      ResourceBundleUtil labels=ResourceBundleUtil.getBundle("org.jhotdraw.app.Labels");
      JSheet.showMessageSheet(view.getComponent(),"<html>" + UIManager.getString("OptionPane.css") + "<b>"+ labels.getFormatted("file.load.couldntLoad.message",file.getName())+ "</b><br>"+ ((value == null) ? "" : value),JOptionPane.ERROR_MESSAGE,new SheetListener(){
        public void optionSelected(        SheetEvent evt){
          view.clear();
          view.setEnabled(true);
        }
      }
);
    }
  }
);
}
