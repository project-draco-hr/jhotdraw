{
  ApplicationContext ac=ApplicationContext.getInstance();
  ResourceMap rm=ac.getResourceMap();
  JOptionPane.showMessageDialog(WindowManager.getInstance().getComponent(),rm.getString("Application.title") + " " + rm.getString("Application.version")+ "\n"+ rm.getString("Application.vendor")+ "\n\nRunning on Java "+ System.getProperty("java.vm.version")+ ", "+ System.getProperty("java.vendor"),"About",JOptionPane.PLAIN_MESSAGE);
}
