{
  Application app;
  String os=System.getProperty("os.name").toLowerCase();
  if (os.startsWith("mac")) {
    app=new DefaultOSXApplication();
  }
 else   if (os.startsWith("win")) {
    app=new DefaultSDIApplication();
  }
 else {
    app=new DefaultSDIApplication();
  }
  SVGApplicationModel model=new SVGApplicationModel();
  model.setName("SVG Draw");
  model.setVersion("0.2");
  model.setCopyright("Copyright 2006-2007 (c) Werner Randelshofer.\n" + "Licensed under LGPL or Creative Commons 2.5 BY-SA.");
  model.setProjectClassName("org.jhotdraw.samples.svg.SVGProject");
  app.setModel(model);
  app.launch(args);
}
