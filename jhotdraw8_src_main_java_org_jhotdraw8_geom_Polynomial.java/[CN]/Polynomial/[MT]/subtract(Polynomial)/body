{
  int d1=this.getDegree();
  int d2=that.getDegree();
  int dmax=max(d1,d2);
  double[] result=new double[dmax];
  for (int i=0; i <= dmax; i++) {
    double v1=(i <= d1) ? this.coefs[i] : 0;
    double v2=(i <= d2) ? that.coefs[i] : 0;
    result[i]=v1 - v2;
  }
  return new Polynomial(false,result);
}
