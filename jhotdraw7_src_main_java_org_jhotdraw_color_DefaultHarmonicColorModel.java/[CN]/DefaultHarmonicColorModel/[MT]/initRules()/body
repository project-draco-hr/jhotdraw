{
  adjusting++;
  if (hueRule != null) {
    hueRule.init(this);
    hueRule.apply(this,get(getBase()));
  }
  if (lightnessRule != null) {
    lightnessRule.init(this);
    lightnessRule.apply(this,get(getBase()));
  }
 else {
    for (int i=0; i < size(); i++) {
      if (i % 5 != 0) {
        colors.set(i,null);
      }
    }
  }
  fireContentsChanged(this,1,size() - 1);
  adjusting--;
}
