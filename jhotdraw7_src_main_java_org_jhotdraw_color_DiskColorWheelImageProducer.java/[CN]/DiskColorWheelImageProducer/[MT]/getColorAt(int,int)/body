{
  float radius=getRadius();
  Point2D.Float center=getCenter();
  float radial=(x - center.x) / radius;
  float angular=(y - center.y) / radius;
  if (flipX)   angular=-angular;
  if (flipY)   radial=-radial;
  float r=(float)sqrt(angular * angular + radial * radial);
  if (r > 1f) {
    angular/=r;
    radial/=r;
  }
  float[] hsb=new float[3];
  hsb[angularIndex]=(angular + 1f) / 2f * (colorSpace.getMaxValue(angularIndex) - colorSpace.getMinValue(angularIndex)) + colorSpace.getMinValue(angularIndex);
  hsb[radialIndex]=(radial + 1f) / 2f * (colorSpace.getMaxValue(radialIndex) - colorSpace.getMinValue(radialIndex)) + colorSpace.getMinValue(radialIndex);
  hsb[verticalIndex]=verticalValue;
  return hsb;
}
