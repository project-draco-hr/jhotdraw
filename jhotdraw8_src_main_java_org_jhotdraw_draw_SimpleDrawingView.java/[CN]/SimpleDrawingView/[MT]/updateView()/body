{
  LinkedList<Figure> updateNodes=new LinkedList<>(dirtyFigureNodes);
  dirtyFigureNodes.clear();
  for (  Figure f : updateNodes) {
    f.updateNode(this,getNode(f));
  }
  for (  Handle h : selectionHandles) {
    h.updateNode(this);
  }
  for (  Handle h : secondaryHandles) {
    h.updateNode(this);
  }
}
