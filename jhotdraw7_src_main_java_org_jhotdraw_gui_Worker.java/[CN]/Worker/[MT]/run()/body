{
  try {
    setValue(construct());
  }
 catch (  Throwable e) {
    setError(e);
    SwingUtilities.invokeLater(new Runnable(){
      public void run(){
        failed(getError());
        finished();
      }
    }
);
    return;
  }
  SwingUtilities.invokeLater(new Runnable(){
    public void run(){
      done(getValue());
      finished();
    }
  }
);
}
