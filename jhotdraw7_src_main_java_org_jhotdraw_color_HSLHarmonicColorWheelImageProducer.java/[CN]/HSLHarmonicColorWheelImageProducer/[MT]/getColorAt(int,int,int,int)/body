{
  x-=width / 2;
  y-=height / 2;
  float r=(float)Math.sqrt(x * x + y * y);
  float theta=(float)Math.atan2(-y,x);
  float radius=Math.min(width,height) / 2f;
  float[] hsb;
  float sat=(float)r / radius;
  float hue=(float)(theta / Math.PI / 2d);
  if (hue < 0) {
    hue+=1f;
  }
  hsb=new float[]{hue,1f,1f - sat};
  return hsb;
}
