{
  if (figure != null) {
    x2=event.getX();
    y2=event.getY();
    Point2D c1=dv.getConstrainer().constrainPoint(dv.viewToDrawing(x1,y1));
    Point2D c2=dv.getConstrainer().constrainPoint(dv.viewToDrawing(x2,y2));
    figure.reshape(c1.getX(),c1.getY(),c2.getX() - c1.getX(),c2.getY() - c1.getY());
  }
}
