{
  Application app;
  String os=System.getProperty("os.name").toLowerCase();
  if (os.startsWith("mac")) {
    app=new DefaultOSXApplication();
  }
 else   if (os.startsWith("win")) {
    app=new DefaultSDIApplication();
  }
 else {
    app=new DefaultSDIApplication();
  }
  DefaultApplicationModel model=new NetApplicationModel();
  model.setName("JHotDraw Net");
  model.setVersion("7.0.9");
  model.setCopyright("Copyright 2006-2007 (c) by the authors of JHotDraw\n" + "This software is licensed under LGPL or Creative Commons 2.5 BY");
  model.setProjectClassName("org.jhotdraw.samples.net.NetProject");
  app.setModel(model);
  app.launch(args);
}
