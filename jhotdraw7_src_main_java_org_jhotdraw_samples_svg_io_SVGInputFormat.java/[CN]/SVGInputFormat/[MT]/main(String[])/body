{
  final Drawing drawing;
  try {
    File f=new File(System.getProperty("user.home") + "/Desktop/Spirale.svg");
    SVGInputFormat sf=new SVGInputFormat();
    drawing=new DefaultDrawing();
    sf.read(f.toURL(),new FileInputStream(f),drawing,new LinkedList<Figure>());
  }
 catch (  Exception e) {
    e.printStackTrace();
    return;
  }
  SwingUtilities.invokeLater(new Runnable(){
    public void run(){
      JFrame f=new JFrame("My Drawing");
      f.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
      f.setSize(400,300);
      DrawingView view=new DefaultDrawingView();
      view.setDrawing(drawing);
      f.getContentPane().add(view.getJComponent());
      f.show();
    }
  }
);
}
