{
  try {
    String str=buf.toString().trim();
    Color c;
    if ("none".equals(str)) {
      c=null;
    }
 else {
      c=Color.web(str);
    }
    buf.position(buf.limit());
    return c;
  }
 catch (  IllegalArgumentException e) {
    ParseException pe=new ParseException("not a color:" + buf,buf.position());
    pe.initCause(e);
    throw pe;
  }
}
